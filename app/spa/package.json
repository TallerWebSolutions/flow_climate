{
  "name": "flow-climate-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@amplitude/analytics-browser": "^1.10.3",
    "@apollo/client": "^3.5.5",
    "@emotion/react": "^11.7.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/lab": "^5.0.0-alpha.74",
    "@mui/material": "^5.2.3",
    "@nivo/bar": "^0.88",
    "@nivo/core": "^0.88",
    "@nivo/line": "^0.88",
    "@nivo/pie": "^0.88",
    "@nivo/scatterplot": "^0.88",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/node": "^12.20.37",
    "@types/react": "^17.0.37",
    "@types/react-csv": "^1.1.2",
    "@types/react-dom": "^17.0.11",
    "@types/react-helmet": "^6.1.4",
    "currency.js": "^2.0.4",
    "date-fns": "^2.28.0",
    "graphql": "^16.0.1",
    "i18next-resources-to-backend": "^1.0.0",
    "material-ui-confirm": "^3.0.3",
    "react": "^17.0.2",
    "react-component-export-image": "^1.0.6",
    "react-cookie": "^4.1.1",
    "react-csv": "^2.2.2",
    "react-date-picker": "^8.4.0",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.53.2",
    "react-i18next": "^15.2.0",
    "react-router-dom": "^6.1.1",
    "react-scripts": "^5.0.1",
    "typescript": "^4.5.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "PUBLIC_URL=/spa-build react-scripts build",
    "build:watch": "NODE_ENV=development npm run build; npm run watch build",
    "test": "TZ=UTC react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint . --ext ts --ext tsx",
    "format": "prettier --write .",
    "watch": "npm-watch"
  },
  "engines": {
    "node": "20"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "ignorePatterns": [
      "__tests__"
    ],
    "rules": {
      "no-console": "warn",
      "max-len": [
        "error",
        {
          "code": 140
        }
      ],
      "complexity": [
        "error",
        17
      ],
      "max-depth": [
        "error",
        3
      ],
      "max-params": [
        "error",
        4
      ],
      "max-statements": [
        "error",
        44
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.25.9",
    "@types/jest": "^27.4.0",
    "lint-staged": "^12.1.2",
    "npm-watch": "^0.11.0",
    "prettier": "^2.5.1",
    "webpack": "^5.68.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "ts,tsx,json",
      "quiet": false,
      "runOnChangeOnly": true
    }
  }
}
