<div class="row bottom-spaced-component">
  <div class="col-xs-12">
    <ul class="breadcrumb">
      <li><%= link_to I18n.t('general.home.title'), root_path %></li>
      <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
      <li><%= link_to Project.model_name.human(count: 2), company_projects_path(@company) %></li>
      <li><%= link_to @project.name, company_project_path(@company, @project) %></li>
      <li><%= FlowImpact.model_name.human(count: 2) %></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to I18n.t('flow_impacts.new.title'), new_company_project_flow_impact_path(@company, @project), class: 'btn btn-success pull-right' %>
  </div>
</div>

<div id="flow-impacts-table">
  <%= render 'flow_impacts/flow_impacts_table', company: @company, project: @project, flow_impacts: @flow_impacts %>
</div>