var operationalChartsDiv = $("#operational-charts-div");

operationalChartsDiv.html("<%= escape_javascript(render 'charts/operational_charts', target_name: @target_name, report_data: @report_data, company: @company, projects: @projects, start_date: @start_date, end_date: @end_date).html_safe %>");

$('#nav-item-charts').addClass('active');

$('#general-loader').hide();
operationalChartsDiv.show();
$('#operational-charts').show();

<% if @report_data.present? %>
  buildOperationalHighcharts();
<% end %>

var reportChartsCurrent = $("#status-report-charts-current-div");
reportChartsCurrent.html("<%= escape_javascript(render 'charts/status_report_charts', target_name: @target_name, status_report_data: @status_report_data, portfolio_data: @portfolio_data, projects: @projects, start_date: @start_date, end_date: @end_date).html_safe %>");

var reportChartsProjection = $("#status-report-charts-projection-div");
reportChartsProjection.html("<%= escape_javascript(render 'charts/status_report_projection_charts', target_name: @target_name, status_report_data: @status_report_data, montecarlo_durations: @montecarlo_durations, projects: @projects, start_date: @start_date, end_date: @end_date).html_safe %>");

reportChartsCurrent.show();
reportChartsProjection.show();

buildStatusReportCurrentCharts();
buildStatusReportProjectionCharts();

enableTabs();
