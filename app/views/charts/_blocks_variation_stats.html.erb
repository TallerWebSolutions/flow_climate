<div class="row">
  <div class="col-xs-8">
    <div id="line-blocks-accumalated"
         class="flow-chart"
         data-xcategories='<%= x_axis.to_json %>'
         data-title='<%= I18n.t('projects.statistics.accumulated_blocks.chart_title') %>'
         data-ytitle='<%= I18n.t('demand_blocks.index.title') %>'
         data-prefix=''
         data-tooltipsuffix=''
         data-datalabelsuffix=''
         data-series='<%= block_data.to_json %>'
         data-stacking='normal'
         data-decimals='0'>
    </div>
  </div>

  <div class="col-xs-2 center-text">
    <div><%= I18n.t('general.start') %></div>
    <h3><%= number_with_precision(block_data[0][:data].first, precision: 3) %></h3>
  </div>
  <div class="col-xs-2 center-text bottom-spaced-component">
    <div><%= I18n.t('general.finish') %></div>
    <h3><%= number_with_precision(block_data[0][:data].last, precision: 3) %></h3>
  </div>

  <div class="col-xs-4">
    <hr>
  </div>

  <div class="col-xs-4 center-text">
    <div><%= I18n.t('stats.period.variation') %></div>
    <h3><%= number_to_percentage((block_period_variation * 100), precision: 1) %></h3>
  </div>
</div>
