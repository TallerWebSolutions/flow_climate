<div class="row">
  <div class="col-xs-8">
    <div id="line-leadtime-accumalated"
         class="flow-chart"
         data-xcategories='<%= x_axis.to_json %>'
         data-title='<%= t('projects.charts.leadtime_evolution.title') %>'
         data-ytitle='<%= t('charts.cfd.ytitle') %>'
         data-prefix=''
         data-suffix='<%= t('general.days_text', days: nil) %>'
         data-series='<%= leadtime_data.to_json %>'
         data-stacking='normal'
         data-decimals='3'>
    </div>
  </div>

  <div class="col-xs-2 center-text">
    <div><%= t('general.start') %></div>
    <h3><%= number_with_precision(leadtime_data[0][:data].first, precision: 3) %></h3>
  </div>
  <div class="col-xs-2 center-text bottom-spaced-component">
    <div><%= t('general.finish') %></div>
    <h3><%= number_with_precision(leadtime_data[0][:data].last, precision: 3) %></h3>
  </div>

  <div class="col-xs-4">
    <hr>
  </div>

  <div class="col-xs-4 center-text">
    <div><%= t('stats.period.variation') %></div>
    <h3><%= number_to_percentage((leadtime_period_variation * 100), precision: 1) %></h3>
  </div>
</div>