<div class="row">
  <div class="row">
    <div class="col-xs-12">
      <ul class="breadcrumb">
        <li><%= link_to I18n.t('general.home.title'), root_path %></li>
        <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
        <li><%= link_to Product.model_name.human.pluralize, company_products_path(@company) %></li>
        <li><%= link_to @product.name, company_product_path(@company, @product) %></li>
        <li><%= RiskReview.model_name.human %></li>
      </ul>
    </div>
  </div>
</div>

<h4><%= "#{RiskReview.human_attribute_name :meeting_date}: #{I18n.l(@risk_review.meeting_date)}" %></h4>
<h4><%= "#{RiskReview.human_attribute_name :demands}: #{I18n.t('general.demands_text', count: @risk_review.demands.count)}" %></h4>
<h4><%= "#{RiskReview.human_attribute_name :lead_time_outlier_limit}: #{I18n.t('general.days_text', count: number_with_precision(@risk_review.lead_time_outlier_limit, precision: 2))}" %></h4>
<h4><%= "#{I18n.t('risk_reviews.show.outlier_demands_label')}: #{I18n.t('general.demands_text', count: @risk_review.outlier_demands.count)}" %></h4>

<hr>

<h4>Demandas Outliers de Lead Time <%= "(#{number_to_percentage((@risk_review.outlier_demands.count.to_f / @risk_review.demands.count) * 100, precision: 2)})" %></h4>

<span>
  <%= render 'demands/portfolio_demands_table', company: @company, product: @product, demands: @risk_review.outlier_demands %>
</span>
