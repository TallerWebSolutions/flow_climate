var riskReviewsDiv = $('#risk-reviews');

<% if @risk_review.errors.empty? %>
  riskReviewsDiv.html("<%= escape_javascript(render 'risk_reviews/risk_reviews_table', company: @company, product: @product, risk_reviews: @risk_reviews) %>");
<% else %>
  riskReviewsDiv.html("<%= escape_javascript(render 'risk_reviews/edit', company: @company, product: @product, risk_review: @risk_review) %>");

  $('#cancel-form-risk-review').on('click', function() {
      riskReviewsDiv.html("<%= escape_javascript(render 'risk_reviews/risk_reviews_table', company: @company, product: @product, risk_reviews: @risk_reviews) %>");
  });
<% end %>

<% if flash[:notice].present? %>
  $(".alerts").html("<%= escape_javascript(render('layouts/notice', message: flash[:notice].html_safe)) %>")
<% end %>
