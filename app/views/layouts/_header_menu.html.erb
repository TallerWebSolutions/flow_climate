<div class="col-xs-2">
  <%= link_to root_path do %>
    <% image_tag 'https://res.cloudinary.com/dmphguydp/image/upload/v1550266141/Logo_preto_uyepsn.png', size: '131x45' %>
  <% end %>
</div>

<div class="col-xs-3 header-nav">
  <% if company.present? && company.persisted? %>
    <span><%= link_to I18n.t('navbar.customers_list'), company_customers_path(company), class: 'nav-link top-nav-bar-item' %> | </span>
    <span><%= link_to I18n.t('navbar.products_list'), company_products_path(company), class: 'nav-link top-nav-bar-item' %></span>
  <% end %>
</div>

<div class="col-xs-7 pull-right">
  <div class="dropdown topnav-right">
    <% if current_user.present? && current_user.avatar.present? %>
      <%= image_tag current_user.avatar.url, size: '50x50', class: 'user-avatar dropdown-toggle', 'data-toggle' => 'dropdown' %>
    <% else %>
      <%= image_tag 'img-empty.png', size: '50x50', class: 'user-avatar dropdown-toggle', 'data-toggle' => 'dropdown' %>
    <% end %>

    <ul class="dropdown-menu dropdown-menu-right">
      <% if current_user.present? %>
        <li><%= link_to I18n.t('users.account.self'), current_user, class: 'nav-link dropdown-item'%></li>
        <% if current_user.email_notifications? %>
          <li><%= link_to 'Desligar Notificações', deactivate_email_notifications_users_path, method: :patch, remote: true, class: 'nav-link dropdown-item' %></li>
        <% else %>
          <li><%= link_to 'Ligar Notificações', activate_email_notifications_users_path, method: :patch, remote: true, class: 'nav-link dropdown-item' %></li>
        <% end %>
        <% if current_user.admin? || current_user.gold? %>
          <li class="divider"></li>

          <% if company.present? %>
            <li><%= link_to I18n.t('navbar.copy_api_token'), '#', 'data-clipboard-text' => company.api_token, id: 'copy_token' %></li>
            <li class="divider"></li>
          <% end %>

          <% if current_user.companies.present? %>
            <% current_user.companies.each do |company| %>
              <li><%= link_to company.abbreviation&.upcase, company_path(company) %></li>
            <% end %>
          <% else %>
            <li><%= link_to I18n.t('companies.new.title'), new_company_path %></li>
          <% end %>
        <% end %>
        <% if current_user.admin? %>
          <li class="divider"></li>
          <li><%= link_to 'Admin Dashboard', users_path %></li>
        <% end %>
        <li class="divider"></li>
        <li><%= link_to I18n.t('header.logout'), destroy_user_session_path, method: :delete, class: 'nav-link dropdown-item'%></li>
      <% else %>
        <li class="divider"></li>
        <li><%= link_to I18n.t('devise.sessions.login'), new_user_session_path, class: 'nav-link dropdown-item'%></li>
      <% end %>
    </ul>
  </div>
</div>
