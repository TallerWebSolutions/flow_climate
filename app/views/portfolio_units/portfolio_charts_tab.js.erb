var portfolioChartsDiv = $('#portfolio-charts')

portfolioChartsDiv.html("<%= escape_javascript(render 'charts/portfolio_charts', demands: @demands, demands_chart_adapter: @demands_chart_adapter, start_date: @start_date, end_date: @end_date, projects_count: @product.projects.count) %>")

$('#general-loader').hide();

buildDemandsTabCharts();

portfolioChartsDiv.show();
$('#demands-charts-div').show();

enableTabs();

$('#search-charts').on('click', function() {
    $('#demands-charts-div').hide();

    const companyId = $("#company_id").val();
    const productId = $("#product_id").val();

    const period = $('#charts_filter_period').val();
    const startDate = $('#charts_filter_start_date').val();
    const endDate = $('#charts_filter_end_date').val();

    searchPortfolioChartsTab(companyId, productId, startDate, endDate, period)
});
