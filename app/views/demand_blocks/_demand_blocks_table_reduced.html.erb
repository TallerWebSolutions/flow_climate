<% if demand_blocks_list.empty? %>
  <div class="row">
    <div class="col-xs-12">
      <%= I18n.t('demands.show.no_demand_blocks') %>
    </div>
  </div>
<% else %>
  <table class="table table-striped table-index">
    <thead>
      <tr>
        <th><%= DemandBlock.human_attribute_name :external_id %></th>
        <th><%= DemandBlock.human_attribute_name :block_type %></th>
        <th><%= DemandBlock.human_attribute_name :block_duration %></th>
        <th><%= DemandBlock.human_attribute_name :block_working_time_duration %></th>
        <th><%= DemandBlock.human_attribute_name :blocker_username %></th>
        <th><%= DemandBlock.human_attribute_name :unblocker_username %></th>
        <th><%= DemandBlock.human_attribute_name :block_time %></th>
        <th><%= DemandBlock.human_attribute_name :unblock_time %></th>
        <th><%= DemandBlock.human_attribute_name :stage %></th>
        <th><%= DemandBlock.human_attribute_name :stage_when_unblocked %></th>
        <th><%= DemandBlock.human_attribute_name :block_reason %></th>
      </tr>
    </thead>
    <tbody>
      <% demand_blocks_list.each do |block| %>
        <tr>
          <td><%= link_to block.demand.external_id, company_demand_path(company, block.demand), target: :_blank %></td>
          <td><%= t("activerecord.attributes.demand_block.enums.block_type.#{block.block_type}") %></td>
          <td><%= time_distance_in_words(block.total_blocked_time) %></td>
          <td><%= "#{block.block_working_time_duration} h" if block.block_working_time_duration.present? %></td>
          <td><%= block.blocker.name %></td>
          <td><%= block.unblocker&.name %></td>
          <td><%= I18n.l(block.block_time, format: :short) %></td>
          <td><%= I18n.l(block.unblock_time, format: :short) if block.unblock_time.present? %></td>
          <td><%= block.stage&.name %></td>
          <td><%= block.stage_when_unblocked&.name %></td>
          <td><%= block.block_reason %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td><%= time_distance_in_words(demand_blocks_list.map(&:total_blocked_time).compact.sum) %></td>
        <td><%= "#{demand_blocks_list.map(&:block_working_time_duration).compact.sum} h" %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
<% end %>
