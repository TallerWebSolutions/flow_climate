$("#team_fields").html("<%= escape_javascript(render 'teams/team_fields', company: @company, start_date: @start_date, end_date: @end_date, teams: @teams) %>")

var alertsDiv = $(".alerts");
<% if flash[:error].present? %>
  alertsDiv.html("<%= escape_javascript(render('layouts/error', message: flash[:error].html_safe)) %>")

<% elsif flash[:notice].present? %>
  alertsDiv.html("<%= escape_javascript(render('layouts/notice', message: flash[:notice].html_safe)) %>")

<% end %>
