var flow_div = $('#flow');
flow_div.html("<%= escape_javascript(render 'teams/flow', flow_report_data: @flow_report_data, team: @team).html_safe %>");

buildFlowDemandsCharts();

$(".loader").hide();
flow_div.show();
$('#nav-item-flow').addClass('active');

$('#search_week').on('click', function () {
    flow_div.show();
    $(".loader").show();
    searchDemandsToFlowCharts($('#company_id').val(), $('#team_id').val(), $('#week').val(), $('#year').val());
});
