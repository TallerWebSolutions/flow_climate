<%= form_tag statistics_tab_company_team_path(@company, @team), method: :get, remote: true do %>
  <%= render 'charts/charts_stats_filter', start_date: [@team_projects.minimum(:start_date), 3.months.ago.to_date].compact.max, end_date: @team_projects.maximum(:end_date) %>
<% end %>

<hr>

<%= render 'charts/chart_stats_body',
           x_axis: x_axis,
           block_data: block_data,
           block_period_variation: block_period_variation,
           leadtime_period_variation: leadtime_period_variation,
           leadtime_data: leadtime_data,
           scope_data: scope_data,
           scope_period_variation: scope_period_variation,
           block_by_project_data: block_by_project_data,
           block_by_project_variation: block_by_project_variation,
           block_by_project_x_axis: block_by_project_x_axis,
           aging_by_project_data: aging_by_project_data,
           aging_by_project_variation: aging_by_project_variation,
           aging_by_project_x_axis: aging_by_project_x_axis
%>
