<div class="row">
  <div class="col-xs-2 stamp">
    <div class="stamp-title"><%= Team.model_name.human %></div>
    <div class="stamp-content"><%= team.name  %></div>
  </div>
  <div class="col-xs-2 stamp">
    <div class="stamp-title"><%= I18n.t('projects.general.scope') %></div>
    <div class="stamp-content"><%= team.last_week_scope  %></div>
  </div>
  <div class="col-xs-2 stamp">
    <div class="stamp-title"><%= I18n.t('general.delivered') %></div>
    <div class="stamp-content"><%= team.delivered_scope  %></div>
  </div>
  <div class="col-xs-2 stamp">
    <div class="stamp-title"><%= I18n.t('projects.index.remaining_backlog') %></div>
    <div class="stamp-content"><%= team.remaining_backlog  %></div>
  </div>
  <div class="col-xs-2 stamp">
    <div class="stamp-title"><%= I18n.t('projects.index.percentage_remaining_scope') %></div>
    <div class="stamp-content"><%= number_to_percentage(team.percentage_remaining_scope, precision: 2)  %></div>
  </div>
  <div class="col-xs-2 stamp">
    <div class="stamp-title"><%= I18n.t('projects.index.flow_pressure') %></div>
    <div class="stamp-content"><%= number_with_precision(team.total_flow_pressure, precision: 3)  %></div>
  </div>
</div>

<div class="row bottom-spaced-component">
  <div class="col-xs-4 green-stamp">
    <div class="stamp-title"><%= I18n.t('customers.show.active_projects_value') %></div>
    <div class="stamp-content"><%= number_to_currency(team.active_projects.map(&:value).compact.sum) %></div>
  </div>
  <div class="col-xs-4 green-stamp">
    <div class="stamp-title"><%= I18n.t('projects.index.remaining_money') %></div>
    <div class="stamp-content"><%= number_to_currency(team.remaining_money(@end_date)) %></div>
  </div>
  <div class="col-xs-4 green-stamp">
    <div class="stamp-title"><%= I18n.t('projects.index.percentage_remaining_money') %></div>
    <div class="stamp-content"><%= number_to_percentage(team.percentage_remaining_money(@end_date), precision: 2)  %></div>
  </div>
</div>

<hr>

<div id="slack-config-table">
  <%= render 'slack_configurations/slack_config_table', company: company, team: team, slack_configurations: slack_configurations %>

</div>