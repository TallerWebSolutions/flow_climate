<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <ul class="breadcrumb">
        <li><%= link_to t('general.home.title'), root_path %></li>
        <li><%= link_to @team.name, company_team_path(@company, @team) %></li>
      </ul>
    </div>
  </div>

  <%= form_for [@company, @team, @team_member], class: 'form' do |f| %>
    <div class="row botton-spaced-component">
      <div class="col-xs-12">
        <%= render 'form', f: f %>
      </div>
    </div>
  <% end %>
</div>
