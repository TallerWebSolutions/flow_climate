<h4><%= t('pipefy_configs.index.title') %></h4>

<div class="row">
  <div class="col-xs-2 bottom-spaced-component">
    <%= link_to t('pipeconfigs.new.title'), new_company_pipefy_config_path(@company), class: 'btn btn-primary btn-list bottom-spaced-component' %>
  </div>
</div>
<div class="row">
  <table class="table">
    <thead>
      <th><%= PipefyConfig.human_attribute_name :team %></th>
      <th><%= PipefyConfig.human_attribute_name :project %></th>
      <th><%= PipefyConfig.human_attribute_name :pipe_id %></th>
      <th><%= t('general.table.actions') %></th>
    </thead>
    <tbody>
      <% @company.pipefy_configs.each do |pipefy_config| %>
        <tr>
          <td><%= pipefy_config.team_name %></td>
          <td><%= pipefy_config.project_full_name %></td>
          <td><%= pipefy_config.pipe_id %></td>
          <td>
            <%= link_to company_pipefy_config_path(@company, pipefy_config), method: :delete do %>
              <i class="fa fa-times" aria-hidden="true"></i>
            <% end %>
            <%= link_to edit_company_pipefy_config_path(@company, pipefy_config) do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
