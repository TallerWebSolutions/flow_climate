<div class="row">
  <div class="col-xs-10">
    <h1><%= @company.name %></h1>
  </div>
</div>

<div class="row">
  <div class="topnav">
    <%= link_to t('navbar.details'), '#', id: 'nav-item-stamps', class: 'active' %>
    <%= link_to t('navbar.projects_list'), '#', id: 'nav-item-list' %>
    <%= link_to t('navbar.teams'), '#', id: 'nav-item-teams' %>
    <%= link_to t('navbar.finance'), '#', id: 'nav-item-finance' %>
    <%= link_to t('navbar.strategic'), '#', id: 'nav-item-strategic' %>
    <%= link_to t('navbar.settings'), '#', id: 'nav-item-settings' %>
  </div>
</div>

<div id="stamps">
  <%= render 'company_stamps' %>
</div>

<div id="teams">
  <%= render 'teams/teams_table' %>
</div>

<div id="finance">
  <%= render 'financial_informations/finances_tab', finances: @finances %>
</div>

<div id="project-list">
  <%= render 'projects/projects_table', projects_list: @company.projects %>
</div>

<div id="strategic">
  <%= render 'companies/strategic_table', model_name: @company.name, strategic_chart_data: @strategic_chart_data %>
</div>

<div id="settings">
  <%= render 'company_settings' %>
  <hr>
  <%= render 'pipefy_configs' %>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag 'charts/column-line' %>
  <%= javascript_include_tag 'charts/line' %>
  <%= javascript_include_tag 'charts/gauge' %>

  <%= javascript_include_tag 'components/components' %>

  <%= javascript_include_tag 'companies/strategic_charts' %>
  <%= javascript_include_tag 'projects/risk_alert_color_chart' %>

  <%= javascript_include_tag 'finances/chart_builder' %>

  <%= javascript_include_tag 'companies/show' %>
<% end %>
