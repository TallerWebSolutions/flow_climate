var membershipTable = $("#membership-table")

<% if @membership.errors.empty? %>
  membershipTable.html("<%= escape_javascript(render 'memberships/memberships_table', team: @team, company: @company, memberships: @memberships).html_safe %>");
<% else %>
  membershipTable.html("<%= escape_javascript(render('memberships/edit', company: @company, team: @team, team_members: @team_members, membership: @membership)) %>");
  $('#cancel-form-membership').on('click', function() {
    $("#membership-table").html("<%= escape_javascript(render 'memberships/memberships_table', team: @team, company: @company, memberships: @memberships).html_safe %>");
  });
<% end %>
