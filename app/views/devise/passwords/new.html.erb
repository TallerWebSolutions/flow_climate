<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">

      <h2><%= t('devise.shared_links.forgot_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, class: 'form-horizontal') do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit t('devise.passwords.reset_instructions'), class: 'btn btn-primary' %>
          </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>