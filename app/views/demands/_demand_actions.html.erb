<% unless demand.discarded? %>
  <%= link_to '#', onclick: "destroyDemand(#{company.id}, #{demand.id}, '#{I18n.t('general.destroy.confirm')}', #{demands_ids})" do %>
    <i class="fa fa-times" aria-hidden="true"></i>
  <% end %>
<% end %>

<%= link_to '#', class: 'edit-demand-button', onclick: "editDemand(#{company.id}, #{demand.project_id}, #{demand.id}, #{demands_ids})" do %>
  <i class="fas fa-edit"></i>
<% end %>

<% if demand.url.present? %>
  <%= link_to demand.url, target: :_blank do %>
    <i class="fas fa-external-link-alt"></i>
  <% end %>
<% end %>
