<div class="standard-form">

  <div class="row">
    <div class='col-xs-4 form-group <%= 'has-error' if @demand.errors[:demand_type].present? %>'>
      <%= f.label :demand_type, class: 'control-label' %>
      <%= f.select :demand_type, Demand.demand_types.map { |key, _value| [t("activerecord.attributes.demand.enums.demand_type.#{key}"), key] }, { include_blank: t('general.select'), selected: @demand.demand_type }, class: 'form-control' %>
      <span class="help-block"><%= @demand.errors[:demand_type].join(', ') %></span>
    </div>
    <div class='col-xs-4 form-group <%= 'has-error' if @demand.errors[:demand_id].present? %>'>
      <%= f.label :demand_id, class: 'control-label required' %>
      <%= f.text_field :demand_id, class: 'form-control', autofocus: true %>
      <span class="help-block"><%= @demand.errors[:demand_id].join(', ') %></span>
    </div>
    <div class='col-xs-4 form-group <%= 'has-error' if @demand.errors[:effort].present? %>'>
      <%= f.label :effort, class: 'control-label required' %>
      <%= f.number_field :effort, value: @demand.effort, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @demand.errors[:effort].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class='col-xs-4 form-group <%= 'has-error' if @demand.errors[:created_date].present? %>'>
      <%= f.label :created_date, class: 'control-label required' %>
      <%= f.datetime_field :created_date, value: @demand.created_date, class: 'form-control' %>
      <span class="help-block"><%= @demand.errors[:created_date].join(', ') %></span>
    </div>
    <div class='col-xs-4 form-group <%= 'has-error' if @demand.errors[:commitment_date].present? %>'>
      <%= f.label :commitment_date, class: 'control-label required' %>
      <%= f.datetime_field :commitment_date, value: @demand.commitment_date, class: 'form-control' %>
      <span class="help-block"><%= @demand.errors[:commitment_date].join(', ') %></span>
    </div>
    <div class='col-xs-4 form-group <%= 'has-error' if @demand.errors[:end_date].present? %>'>
      <%= f.label :end_date, class: 'control-label required' %>
      <%= f.datetime_field :end_date, value: @demand.end_date, class: 'form-control' %>
      <span class="help-block"><%= @demand.errors[:end_date].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
</div>
