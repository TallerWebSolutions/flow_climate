var demandsTab = $('#demands-tab');

demandsTab.html("<%= escape_javascript(render 'demands/demands_tab', company: @company,
                                                                     demands: @demands,
                                                                     demands_count_per_week: @demands_count_per_week,
                                                                     demands_chart_adapter: @demands_chart_adapter,
                                                                     confidence_65_leadtime: @confidence_65_leadtime,
                                                                     confidence_80_leadtime: @confidence_80_leadtime,
                                                                     confidence_95_leadtime: @confidence_95_leadtime,
                                                                     queue_time: @total_queue_time,
                                                                     touch_time: @total_touch_time,
                                                                     start_date: @start_date,
                                                                     end_date: @end_date,
                                                                     discarded_demands: @discarded_demands,
                                                                     projects_ids: @projects_ids).html_safe %>");

demandsTab.show();

enableTabs();

demandsTabMenu = document.getElementsByClassName("demands-tab");
demandsTabMenu[0].className += " active";
document.getElementById("demands-list").style.display = "block";

$('#demands-grouped-per-month-div').hide();
$('#demands-grouped-per-customer-div').hide();
$('#demands-grouped-per-stage-div').hide();
$('#content-charts').hide();
$('#flat-demands-div').show();
$('#list-charts-button').show();