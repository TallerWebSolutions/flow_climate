<% if demands_count_per_week.present? %>
  <h3><%= I18n.t('demands.show.consolidations') %></h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= I18n.t('general.week') %></th>
        <th><%= I18n.t('demands.flow.committed_with') %></th>
        <th><%= I18n.t('general.delivered') %></th>
        <th><%= I18n.t('demands.flow.real_throughput') %></th>
        <th><%= I18n.t('demands.stats.std_committed_with') %></th>
        <th><%= I18n.t('demands.stats.std_throughput') %></th>
      </tr>
    </thead>
    <tbody>
      <% demands_count_per_week.each do |week, behaviour_data| %>
        <tr>
          <td><%= I18n.l(week, format: :default) %></td>
          <td><%= behaviour_data[:arrived_in_week].count %></td>
          <td><%= behaviour_data[:throughput_in_week].count %></td>
          <td><%= behaviour_data[:throughput_in_week].count - behaviour_data[:arrived_in_week].count %></td>
          <td><%= number_with_precision(behaviour_data[:std_dev_arrived], precision: 2) %></td>
          <td><%= number_with_precision(behaviour_data[:std_dev_throughput], precision: 2) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= render 'layouts/no_data', missing_data: Demand.model_name.human %>
<% end %>
