<div class="row">
  <div class="col-xs-12">
    <ul class="breadcrumb">
      <li><%= link_to I18n.t('general.home.title'), root_path %></li>
      <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
      <li><%= I18n.t('products.new.title') %></li>
    </ul>
  </div>
</div>

<%= form_for [@company, @product] do |f| %>
  <div class="row bottom-spaced-component">
    <div class="col-xs-12">
      <%= render 'form', f: f, company: @company, product: @product, company_customers: @company_customers %>
    </div>
  </div>
<% end %>

<div id="products-table">
  <%= render 'products/products_table', company: @company, products_list: @products %>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag 'products/form' %>
<% end %>
