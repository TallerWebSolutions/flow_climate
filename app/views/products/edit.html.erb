<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <ul class="breadcrumb">
        <li><%= link_to t('general.home.title'), root_path %></li>
        <li><%= link_to Product.model_name.plural.capitalize, company_products_path(@company) %></li>
        <li><%= t('products.edit.title') %></li>
      </ul>
    </div>
  </div>

  <%= form_for @product, url: company_product_path(@company, @product), method: :put, class: 'form' do |f| %>
    <div class="row botton-spaced-component">
      <div class="col-xs-12">
        <%= render 'form', f: f %>
      </div>
    </div>
  <% end %>
</div>
