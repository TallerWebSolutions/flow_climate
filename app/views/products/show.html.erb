<div class="row">
  <div class="row">
    <div class="col-xs-12">
      <ul class="breadcrumb">
        <li><%= link_to t('general.home.title'), root_path %></li>
        <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
        <li><%= link_to Product.model_name.human.pluralize, company_products_path(@company) %></li>
        <li><%= @product.name %></li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="topnav">
    <%= link_to t('navbar.details'), '#', id: 'nav-item-stamps', class: 'active nav-tab' %>
    <%= link_to t('navbar.projects_list'), '#', id: 'nav-item-list', class: 'nav-tab' %>
    <%= link_to t('navbar.portfolio_units'), '#', id: 'nav-item-portfolio-unit', class: 'nav-tab' %>
  </div>
</div>

<div id="stamps" class="tab-detail">
  <%= render 'products/product_stamps', company: @company, product: @product %>
</div>

<div id="project-list" class="tab-detail">
  <h2><%= t('projects.index.title') %></h2>

  <div id="projects-table">
    <%= render 'projects/projects_table', company: @company, projects_list: @product_projects, projects_summary: @projects_summary, projects_ids: @product_projects.map(&:id).flatten.join(',') %>
  </div>
</div>

<div id="portfolio-units" class="tab-detail">
  <div id="portfolio-units-table">
    <%= render 'portfolio_units/portfolio_units_table', company: @company, product: @product, portfolio_units: @portfolio_units %>
  </div>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag 'products/show' %>
<% end %>
