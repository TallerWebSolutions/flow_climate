<div>

  <div class="row">
    <div class='col-xs-6 form-group <%= 'has-error' if risk_review_action_item.errors[:created_date].present? %>'>
      <%= form.label :created_date, class: 'control-label required' %>
      <%= form.date_field :created_date, value: risk_review_action_item.created_date || Time.zone.today, class: 'form-control' %>
      <span class="help-block"><%= risk_review_action_item.errors[:created_date].join(', ') %></span>
    </div>

    <div class='col-xs-6 form-group <%= 'has-error' if risk_review_action_item.errors[:deadline].present? %>'>
      <%= form.label :deadline, class: 'control-label required' %>
      <%= form.date_field :deadline, value: risk_review_action_item.deadline || Time.zone.today, class: 'form-control' %>
      <span class="help-block"><%= risk_review_action_item.errors[:deadline].join(', ') %></span>
    </div>
  </div>

  <div class="row">

    <div class='col-xs-6 form-group <%= 'has-error' if risk_review_action_item.errors[:action_type].present? %>'>
      <%= form.label :action_type, class: 'control-label' %>
      <%= form.select :action_type, RiskReviewActionItem.action_types.map { |key, _value| [I18n.t("activerecord.attributes.risk_review_action_item.enums.action_type.#{key}"), key] }, { include_blank: I18n.t('general.select'), selected: risk_review_action_item.action_type }, class: 'form-control' %>
      <span class="help-block"><%= risk_review_action_item.errors[:action_type].join(', ') %></span>
    </div>

    <div class='col-xs-6 form-group <%= 'has-error' if risk_review_action_item.errors[:membership].present? %>'>
      <%= form.label :membership, class: 'control-label' %>
      <%= form.select :membership_id, memberships.map { |membership| [membership.team_member_name, membership.id] }, { selected: risk_review_action_item.membership_id }, class: 'form-control' %>
      <span class="help-block"><%= risk_review_action_item.errors[:membership].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class='col-xs-12 form-group <%= 'has-error' if risk_review_action_item.errors[:description].present? %>'>
      <%= form.label :description, class: 'control-label required' %>
      <%= form.text_field :description, class: 'form-control' %>
      <span class="help-block"><%= risk_review_action_item.errors[:description].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <button type="button" class="btn btn-danger" id="cancel-risk-review-action-item-form"><%= I18n.t('general.buttons.cancel') %></button>
      <%= form.submit class: 'btn btn-success' %>
    </div>
  </div>
</div>
