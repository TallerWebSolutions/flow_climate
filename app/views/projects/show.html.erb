<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <ul class="breadcrumb">
        <li><%= link_to t('general.home.title'), root_path %></li>
        <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
        <li><%= link_to Project.model_name.human.pluralize, company_projects_path(@company) %></li>
        <li><%= @project.name %></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 stamp">
      <div class="stamp-title"><%= Customer.model_name %></div>
      <div class="stamp-content"><%= @project.customer_name %></div>
    </div>
    <div class="col-xs-2 stamp">
      <div class="stamp-title"><%= t('projects.show.last_team') %></div>
      <div class="stamp-content"><%= @project.current_team&.name %></div>
    </div>
    <div class="col-xs-2 stamp">
      <div class="stamp-title"><%= t('projects.show.initial_scope') %></div>
      <div class="stamp-content"><%= @project.initial_scope %></div>
    </div>
    <div class="col-xs-2 stamp">
      <div class="stamp-title"><%= t('projects.show.current_scope') %></div>
      <div class="stamp-content"><%= @project.current_backlog %></div>
    </div>
    <div class="col-xs-2 stamp">
      <div class="stamp-title"><%= t('projects.show.delivered_scope') %></div>
      <div class="stamp-content"><%= @total_throughput %></div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2 green-stamp">
      <div class="stamp-title"><%= t('projects.index.remaining_money') %></div>
      <div class="stamp-content"><%= number_to_currency(@project.remaining_money) %></div>
    </div>
    <div class="col-xs-2 green-stamp">
      <div class="stamp-title"><%= t('projects.index.percentage_remaining_money') %></div>
      <div class="stamp-content"><%= number_to_percentage((@project.remaining_money.to_f / @project.value.to_f) * 100, precision: 2)  %></div>
    </div>
    <div class="col-xs-2 stamp">
      <div class="stamp-title"><%= t('projects.index.total_remaining_days') %></div>
      <div class="stamp-content"><%= @project.remaining_days %></div>
    </div>
    <div class="col-xs-2 stamp">
      <div class="stamp-title"><%= t('projects.index.percentage_remaining_days') %></div>
      <div class="stamp-content"><%= number_to_percentage((@project.remaining_days.to_f / @project.total_days.to_f) * 100, precision: 2)  %></div>
    </div>
  </div>

  <%= render 'projects/projects_results_table', project_results_list: @project_results  %>
</div>
