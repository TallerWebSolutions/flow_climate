              </tr>
              <tr>
                <td><%= t('activerecord.attributes.demand.enums.demand_type.ui') %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:ui, 60) / 86_400.0, precision: 2) %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:ui, 80) / 86_400.0, precision: 2) %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:ui, 95) / 86_400.0, precision: 2) %></td>
              </tr>
              <tr>
                <td><%= t('activerecord.attributes.demand.enums.demand_type.wireframe') %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:wireframe, 60) / 86_400.0, precision: 2) %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:wireframe, 80) / 86_400.0, precision: 2) %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:wireframe, 95) / 86_400.0, precision: 2) %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-6">
          <div id="demand-type-donut"
               class="flow-chart"
               data-title='<%= t('projects.charts.class_of_service_pie.title') %>'
               data-seriesname='<%= "Demand Type" %>'
               data-series='<%= [{ name: 'feature', y: project.percentage_of_demand_type(:feature) },
                                 { name: 'bug', y: project.percentage_of_demand_type(:bug) },
                                 { name: 'chore', y: project.percentage_of_demand_type(:chore)},
                                 { name: 'ui', y: project.percentage_of_demand_type(:ui)},
                                 { name: 'wireframe', y: project.percentage_of_demand_type(:wireframe)},
                                 { name: 'performance_improvement', y: project.percentage_of_demand_type(:performance_improvement)}].to_json %>'
               data-chart_height=300
               data-decimals='0'>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
