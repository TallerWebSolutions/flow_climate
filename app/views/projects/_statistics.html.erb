                <td><%= number_with_precision(project.leadtime_for_class_of_service(:bug, 80) / 86_400.0, precision: 2) %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:bug, 95) / 86_400.0, precision: 2) %></td>
              </tr>
              <tr>
                <td><%= t('activerecord.attributes.demand.enums.demand_type.performance_improvement') %></td>
                <td><%= number_with_precision(project.leadtime_for_class_of_service(:performance_improvement, 60) / 86_400.0, precision: 2) %></td>
