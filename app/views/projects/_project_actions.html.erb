<%= link_to company_project_path(company, project), method: :delete, data: { confirm: I18n.t('project.destroy.confirm') } do %>
  <i class="fa fa-times" title='<%= I18n.t('projects.actions.delete.tooltip') %>'></i>
<% end %>

<%= link_to finish_project_company_project_path(company, project), method: :patch, data: { confirm: I18n.t('projects.finish_project.confirm') } do %>
  <i class="far fa-calendar-check" title='<%= I18n.t('projects.actions.finish.tooltip') %>'></i>
<% end %>

<%= link_to '#', class: 'toggle-table-details', onclick: "toggleTableDetails('customers_table_#{project.id}')" do %>
  <i class="fas fa-users" title='<%= I18n.t('projects.actions.customers.tooltip') %>'></i>
<% end %>

<%= link_to '#', class: 'toggle-table-details', onclick: "toggleTableDetails('products_table_#{project.id}')" do %>
  <i class="fas fa-boxes" title='<%= I18n.t('projects.actions.products.tooltip') %>'></i>
<% end %>
