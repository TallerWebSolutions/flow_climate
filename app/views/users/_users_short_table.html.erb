<h4>Pessoas convidadas</h4>
<% if users.present? %>
  <table class="table table-striped table-detail">
    <thead>
      <tr>
        <th>ID</th>
        <th><%= User.human_attribute_name(:first_name) %></th>
        <th><%= User.human_attribute_name(:last_name) %></th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td>
            <%= link_to remove_user_to_customer_company_customer_path(@company, @customer, user.id), method: :delete do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <%= render 'layouts/no_data', missing_data: User.model_name.human(count: 2) %>
<% end %>
