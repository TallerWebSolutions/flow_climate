<div class="row">
  <div class="col-xs-12">
    <ul class="breadcrumb">
      <li><%= link_to I18n.t('general.home.title'), root_path %></li>
      <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
      <li><%= link_to @product.name, company_product_path(@company, @product) %></li>
      <li><%= ScoreMatrixQuestion.model_name.human %></li>
    </ul>
  </div>
</div>

<h2><%= @score_matrix_question.description %></h2>

<div id="score-matrix-answers-table">
  <%= render 'score_matrix_answers/score_matrix_answers_table', company: @company, product: @product, score_matrix_question: @score_matrix_question, score_matrix_answer: @score_matrix_answer, score_matrix_answers: @score_matrix_answers %>
</div>
