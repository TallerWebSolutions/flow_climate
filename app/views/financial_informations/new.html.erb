<div class="row">
  <div class="col-xs-12">
    <ul class="breadcrumb">
      <li><%= link_to t('general.home.title'), root_path %></li>
      <li><%= link_to @company.abbreviation&.upcase, company_path(@company) %></li>
      <li><%= t('financial_informations.new.title') %></li>
    </ul>
  </div>
</div>

<%= form_for [@company, @financial_information] do |f| %>
