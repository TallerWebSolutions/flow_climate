<% if report_data.present? && hours_per_demand_data.present? %>
  <div class="col-xs-6">
    <div id="burnup"
         class="flow-chart"
         data-title='<%= t('projects.charts.burnup.title', project_name: target_name) %>'
         data-weeks='<%= report_data.weeks %>'
         data-xtitle='<%= t('projects.charts.xlabel.weeks') %>'
         data-ytitle='<%= t('projects.charts.burnup.ylabel') %>'
         data-tooltipsufix='<%= t('projects.charts.burnup.tooltipsufix') %>'
         data-ideal='<%= report_data.ideal %>'
         data-current='<%= report_data.current %>'
         data-scope='<%= report_data.scope %>'>
    </div>
  </div>

  <div class="col-xs-6">
    <div id="column"
         class="flow-chart"
         data-title='<%= t('projects.charts.hours_per_demand.title', project_name: target_name) %>'
         data-xcategories='<%= categories %>'
         data-xtitle='<%= xlabel %>'
         data-ytitle='<%= t('projects.charts.hours_per_demand.ylabel') %>'
         data-tooltipsufix='<%= t('projects.charts.hours_per_demand.tooltipsufix') %>'
         data-series='<%= hours_per_demand_data.to_json %>'>
    </div>
  </div>
<% end %>
