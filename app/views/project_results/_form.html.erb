<div class="list-table">

  <div class="row">
    <div class='col-xs-4 form-group <%= 'has-error' if @project_result.errors[:result_date].present? %>'>
      <%= f.label :result_date, class: 'control-label' %>
      <%= f.date_field :result_date, class: 'form-control', autofocus: true %>
      <span class="help-block"><%= @project_result.errors[:result_date].join(', ') %></span>
    </div>

    <div class='col-xs-4 form-group <%= 'has-error' if @project_result.errors[:qty_hours_upstream].present? %>'>
      <%= f.label :qty_hours_upstream, class: 'control-label' %>
      <%= f.number_field :qty_hours_upstream, value: @project_result.qty_hours_upstream, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:qty_hours_upstream].join(', ') %></span>
    </div>

    <div class='col-xs-4 form-group <%= 'has-error' if @project_result.errors[:qty_hours_downstream].present? %>'>
      <%= f.label :qty_hours_downstream, class: 'control-label' %>
      <%= f.number_field :qty_hours_downstream, value: @project_result.qty_hours_downstream, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:qty_hours_downstream].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class='col-xs-4 form-group <%= 'has-error' if @project_result.errors[:throughput].present? %>'>
      <%= f.label :throughput, class: 'control-label' %>
      <%= f.number_field :throughput, value: @project_result.throughput, class: 'form-control', step: 1 %>
      <span class="help-block"><%= @project_result.errors[:throughput].join(', ') %></span>
    </div>

    <div class='col-xs-4 form-group <%= 'has-error' if @project_result.errors[:qty_bugs_opened].present? %>'>
      <%= f.label :qty_bugs_opened, class: 'control-label' %>
      <%= f.number_field :qty_bugs_opened, value: @project_result.qty_bugs_opened, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:qty_bugs_opened].join(', ') %></span>
    </div>

    <div class='col-xs-4 form-group <%= 'has-error' if @project_result.errors[:qty_bugs_closed].present? %>'>
      <%= f.label :qty_bugs_closed, class: 'control-label' %>
      <%= f.number_field :qty_bugs_closed, value: @project_result.qty_bugs_closed, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:qty_bugs_closed].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class='col-xs-3 form-group <%= 'has-error' if @project_result.errors[:leadtime].present? %>'>
      <%= f.label :leadtime, class: 'control-label' %>
      <%= f.number_field :leadtime, value: @project_result.leadtime, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:leadtime].join(', ') %></span>
    </div>

    <div class='col-xs-3 form-group <%= 'has-error' if @project_result.errors[:qty_hours_bug].present? %>'>
      <%= f.label :qty_hours_bug, class: 'control-label' %>
      <%= f.number_field :qty_hours_bug, value: @project_result.qty_hours_bug, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:qty_hours_bug].join(', ') %></span>
    </div>

    <div class='col-xs-3 form-group <%= 'has-error' if @project_result.errors[:histogram_first_mode].present? %>'>
      <%= f.label :histogram_first_mode, class: 'control-label' %>
      <%= f.number_field :histogram_first_mode, value: @project_result.histogram_first_mode, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:histogram_first_mode].join(', ') %></span>
    </div>

    <div class='col-xs-3 form-group <%= 'has-error' if @project_result.errors[:histogram_second_mode].present? %>'>
      <%= f.label :histogram_second_mode, class: 'control-label' %>
      <%= f.number_field :histogram_second_mode, value: @project_result.histogram_first_mode, class: 'form-control', step: 0.01 %>
      <span class="help-block"><%= @project_result.errors[:histogram_second_mode].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.submit class: 'btn btn-success' %>
    </div>
  </div>
</div>
