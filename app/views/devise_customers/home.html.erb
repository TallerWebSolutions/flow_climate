<% if @customer_dashboard_data.present? %>
  <%= render 'customers/dashboards/customer_dashboard',
             company: @company,
             customer: @customer,
             user_invite: nil,
             customer_dashboard_data: @customer_dashboard_data,
             demands_chart_adapter: @demands_chart_adapter,
             contract: nil,
             contracts_flow_information: @contracts_flow_information,
             flow_pressure: @flow_pressure,
             demands: @customer.exclusives_demands.kept,
             demands_delivered: @customer.exclusives_demands.kept.finished,
             unscored_demands: @unscored_demands,
             demands_blocks: @demands_blocks %>
<% else %>
  <% render 'layouts/no_data', missing_data: I18n.t('general.no_data') %>
<% end %>

<% content_for :javascript do %>
  <%= javascript_include_tag 'charts/column' %>
  <%= javascript_include_tag 'charts/column-line' %>
  <%= javascript_include_tag 'charts/line' %>

  <%= javascript_include_tag 'contracts/contract-charts' %>

  <%= javascript_include_tag 'customers/show' %>
<% end %>
